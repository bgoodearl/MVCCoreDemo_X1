@using Microsoft.AspNetCore.Components.Server.Circuits
@inject CircuitHandler BlazorCircuitHandler

<div>
@if (!string.IsNullOrWhiteSpace(Message))
{
    <p>@Message</p>
}
</div>
<div>
    <p>User: [@MyUsername]</p>
</div>

@if (UserAuthenticated)
{
    @if (ClaimItems.Count > 0)
    {
        <div>
            <h2>Claims</h2>
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr><th>Type/Value Type</th><th>Value</th></tr>
                </thead>
                <tbody>
                @foreach (var item in ClaimItems)
                {
                    <tr>
                        <td>@item.ClaimType<br/></td>
                        <td>@item.ClaimValue</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
}

@if (ShowDiagnostics)
{
    <hr/>
    <div>@MyCircuitMessage</div>
<div>
    <p>User: [@MyUsername] - Circuits: @MyUserCircuitCount</p>
</div>
<div>@UserRemovedMessage</div>
}
