@using MVCDemo.Models.UserInfo
@model TokenInfoResult
@{
    ViewData["Title"] = "Token Test";
}

<h1 class="h2">Info from API Token</h1>
@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}
<div>
    <p>User: [@Model.Username]</p>
</div>

@if (Model.ClaimsInfo.Count > 0)
{
<div>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Claim Type</th>
                <th>Claim Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach(ClaimInfo ci in Model.ClaimsInfo)
            {
                <tr>
                    <td>@ci.ClaimType</td>
                    <td>@ci.ClaimValue</td>
                </tr>
            }
        </tbody>
    </table>
</div>
}
